<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Connection status display -->
    <TextView
        android:id="@+id/textConnectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MQTT Status: Disconnected"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"/>

    <!-- Switch: OFF = Automatic, ON = Manual -->
    <Switch
        android:id="@+id/switchMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textConnectionStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:minHeight="48dp"
        android:text="Manual Mode" />

    <!-- Start transmission button -->
    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Transmission"
        android:layout_below="@id/switchMode"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <!-- Stop transmission button -->
    <Button
        android:id="@+id/buttonStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Transmission"
        android:layout_below="@id/buttonStart"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
